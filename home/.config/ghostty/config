theme = Gruvbox Dark

# KEYBINDS START #

# splitting
keybind = ctrl+d=new_split:right
keybind = alt+d=new_split:right

keybind = ctrl+shift+d=new_split:down
keybind = alt+shift+d=new_split:down

# copy + paste
keybind = performable:alt+c=copy_to_clipboard
keybind = performable:ctrl+c=copy_to_clipboard
keybind = performable:alt+v=paste_from_clipboard
keybind = performable:ctrl+v=paste_from_clipboard

keybind = alt+t=new_tab
keybind = alt+w=close_surface

keybind = cmd+f=write_screen_file:open
keybind = cmd+shift+f=write_selection_file:open
keybind = ctrl+shift+f=write_selection_file:open

keybind = ctrl+left=unbind
keybind = ctrl+right=unbind

# KEYBINGS END #

# OPTIONS START #

unfocused-split-opacity = 0.5
copy-on-select = clipboard
confirm-close-surface = false
clipboard-paste-protection = false
term = xterm-256color
scrollback-limit = 20000000
shell-integration = zsh
app-notifications = no-clipboard-copy

# OPTIONS END #
keybind = shift+enter=text:\x1b\r
